# Example Terraform variables file
# Copy this to terraform.tfvars and modify as needed

# Basic configuration
aws_region    = "us-west-2"
environment   = "dev"
project_name  = "deepseek-ocr"

# EC2 configuration
instance_type      = "g6.xlarge"  # GPU instance for ML workloads
root_volume_size   = 100          # GB

# Network configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
allowed_cidr_blocks  = ["0.0.0.0/0"]  # Restrict this for production

# Scheduling configuration
enable_scheduling = true    # Set to false to disable automatic scheduling
stop_time_utc    = "14"    # 2 PM UTC = 9 PM UTC+7
start_time_utc   = "02"    # 2 AM UTC = 9 AM UTC+7

# To customize the schedule for different timezones:
# UTC+8 (Singapore): stop_time_utc = "13", start_time_utc = "01"
# UTC+9 (Japan):     stop_time_utc = "12", start_time_utc = "00"
# UTC+5 (Pakistan):  stop_time_utc = "16", start_time_utc = "04"